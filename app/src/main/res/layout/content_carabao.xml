<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.survey.CarabaoActivity"
    tools:showIn="@layout/activity_survey_carabao">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:elevation="4dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="@string/carabao"
                    android:textColor="#fff"
                    android:textSize="18dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.20935412" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CARABULL (male, 3 years old &amp; above)"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TableLayout
                    android:id="@+id/tblayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1">

                    <TableRow
                        android:id="@+id/tblrow1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/carabull_c">

                            <EditText
                                android:id="@+id/edtCarabullC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:text="0"
                                android:layout_column="0"
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/carabull_n">

                            <EditText
                                android:id="@+id/edtCarabullN"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="clip_vertical"
                                android:ems="10"
                                android:text="0"
                                android:layout_column="1"
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>


                    </TableRow>
                </TableLayout>



                <android.support.constraint.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.20935412" />

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CARACOW / CARAHEIFER (female, 3 years and above)"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TableLayout
                    android:id="@+id/tblayout2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1">

                    <TableRow
                        android:id="@+id/tblrow2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/caracow_c">

                            <EditText
                                android:id="@+id/edtCaracowC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:layout_column="0"
                                android:text="0"
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/caracow_n">

                            <EditText
                                android:id="@+id/edtCaracowN"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="clip_vertical"
                                android:ems="10"
                                android:layout_column="1"
                                android:text="0"
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>

                    </TableRow>
                </TableLayout>



                <android.support.constraint.Guideline
                    android:id="@+id/guideline5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.20935412" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CARACALF (male/female,  less than 3 years old )"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:id="@+id/tblayout3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1">

                    <TableRow
                        android:id="@+id/tblrow3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/caracalf_c">

                            <EditText
                                android:id="@+id/edtCaracalfC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:text="0"
                                android:layout_column="0"
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/caracalf_n">

                            <EditText
                                android:id="@+id/edtCaracalfN"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="clip_vertical"
                                android:ems="10"
                                android:text="0"
                                android:layout_column="1"
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>


                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/txt9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Area in sqm."
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/total_area">

                    <EditText
                        android:id="@+id/edtSwineTotalArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/txtincome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/total_income">

                    <EditText
                        android:id="@+id/edtSwineTotalIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:id="@+id/txt7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carabeef Production"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:id="@+id/tblayout5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1">

                    <TableRow
                        android:id="@+id/tblrow5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/sl_farm_kg">

                            <EditText
                                android:id="@+id/edtSF_sw_kg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:ems="10"
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/sl_farm_hd">

                            <EditText
                                android:id="@+id/edtSF_sw_hd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:ems="10"
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>
                    </TableRow>
                </TableLayout>
                <TableLayout
                    android:id="@+id/tableLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/sl_abb_kg">

                            <EditText
                                android:id="@+id/edtSA_sw_kg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_gravity="clip_vertical"
                                android:ems="10"
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txtView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/sl_abb_hd">

                            <EditText
                                android:id="@+id/edtSA_sw_hd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_gravity="clip_vertical"
                                android:ems="10"
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>
                    </TableRow>
                </TableLayout>
                <!---->

                <android.support.constraint.Guideline
                    android:id="@+id/guideline6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.20935412" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/vaccination"
                    android:textAlignment="center"
                    android:textStyle="bold" />


                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@+id/radiogr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:textAlignment="center"
                        tools:ignore="UselessParent">

                        <RadioButton
                            android:id="@+id/rb1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:onClick="onRadioButtonClicked"
                            android:layout_marginLeft="150dp"
                            android:text="Yes" />

                        <RadioButton
                            android:id="@+id/rb2"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="150dp"
                            android:onClick="onRadioButtonClicked"
                            android:text="No" />
                    </RadioGroup>
                </TableRow>
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/vaccination"
                    android:textAlignment="center"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/vaccination"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:animateLayoutChanges="true"
                    android:entries="@array/vaccination"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:prompt="@string/vacc_prompt" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/dewormed"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@+id/radiogr2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:textAlignment="center"
                        tools:ignore="UselessParent">

                        <RadioButton
                            android:id="@+id/rby"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:onClick="onRadioButtonClicked2"
                            android:layout_marginLeft="150dp"
                            android:text="Yes" />

                        <RadioButton
                            android:id="@+id/rbn"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="150dp"
                            android:onClick="onRadioButtonClicked2"
                            android:text="No" />
                    </RadioGroup>
                </TableRow>

                <Button
                    android:id="@+id/btnProceedSurvey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/add"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



            </LinearLayout>



        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>