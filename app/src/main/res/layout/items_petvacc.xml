<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:layout_column="0"
                    android:text="ID: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505"
                    android:textSize="18sp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/txtViewID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505"
                    android:textSize="18sp"
                    android:visibility="invisible"/>


            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:layout_column="0"
                    android:text="Pet ID: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/petID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505"
                    android:textSize="18sp"/>


            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:layout_column="0"
                    android:text="Pet Name: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/txtPetName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="UserID"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505"
                    android:textSize="18sp" />


            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:layout_column="0"
                    android:text="Date Vaccinated: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/txtDateVacc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewID"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="Owner Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:layout_column="0"
                    android:text="Vaccinated By: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/txtVaccBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="Date of Survey"
                    android:textColor="#050505"
                    android:textSize="18sp" />

            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:layout_column="0"
                    android:text="Created At: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#050505"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/txtCreatedat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="Date of Survey"
                    android:textColor="#050505"
                    android:textSize="18sp" />

            </TableRow>
        </TableLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>